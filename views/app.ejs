<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="https://image.flaticon.com/icons/svg/1868/1868669.svg">
    <title>Kitchenette</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/app.css">
    <script src="/js/app.js"></script>
</head>
<body>

    <nav>
        <div class="account__details">
            <div class="dropdown">
                <button onclick="dropdown()" class="dropbtn"><%= user %></button>
                <div id="myDropdown" class="dropdown-content">
                    <a href="signOut">Log Out</a>
                </div>
            </div>
        </div> 
    </nav>

    <div class="app__main">
        <div class="sidebar">
            <ul>
                <li>
                    <div class="sidebar__listItem" onclick="smart_suggestions()">
                        <img src="https://image.flaticon.com/icons/svg/1868/1868669.svg" alt="">
                        <h1>smart suggestions</h1>
                    </div>
                </li>
                <li>
                    <div class="sidebar__listItem" onclick="recipes()">
                        <img src="https://image.flaticon.com/icons/svg/1830/1830878.svg" alt="">
                        <h1>recipes</h1>
                    </div>
                </li>
                <li>
                    <div class="sidebar__listItem" onclick="ingredients()">
                        <img src="https://image.flaticon.com/icons/svg/2909/2909841.svg" alt="">
                        <h1>ingredients</h1>
                    </div>
                </li>
            </ul>
        </div>

        <div class="app__body">
        
            <div class="smartSuggestions" id="smartSuggestions">
                <h1 class="offset">Smart Suggestions</h1>
                <div class="recipes__cards">
                    <ul>
                        <li><a href="#">
                            <div class="recipe__card">
                                <div class="recipe__card__top">
                                    <img src="https://www.cook2eatwell.com/wp-content/uploads/2019/02/Shredded-Chicken-Tacos-Image-2.jpg" alt="">
                                </div>
                                <div class="recipe__card__bottom">
                                    <div class="recipe__card__bottom__content">
                                        <h5>Chicken Tacos</h5>
                                        <div class="spans">
                                            <span>2HRS</span>
                                            <span>PROTIEN</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </a></li>
                    </ul>
                </div>
            </div>
            

            <div class="recipes" id="recipes">
                <h1 class="offset" >Recipes</h1>
                <div class="recipes__cards">
                    <ul>
                        <li><a href="#" onclick="addRecipe()">
                            <div class="recipe__card grid__center">
                                <div>
                                    <h3>+</h3>
                                    <h5>Add Recipe</h5>
                                </div>
                            </div>
                        </a></li>
                        <% if (recipes.length > 0) { %> 
                            <% recipes.forEach(recipe => { %> 
                                <li><a href="#">
                                    <div class="recipe__card">
                                        <div class="recipe__card__top">
                                            <img src="<%= recipe.rec_img %>" alt="">
                                        </div>
                                        <div class="recipe__card__bottom">
                                            <div class="recipe__card__bottom__content">
                                                <h5><%= recipe.rec_name %> </h5>
                                                <div class="spans">
                                                    <% recipe.rec_tags.forEach(tag => { %> 
                                                    <span><%= tag %> </span>
                                                    <% }) %> 
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </a></li>
                            <% }) %> 
                        <% } %> 
                    </ul>
                </div>
            </div>

            <div class="ingredients" id="ingredients">
                <h1 class="offset">Ingredients</h1>
                <div class="ingredients_div">
                    <ul>
                        <li><a href="#">
                            <div class="ing__button">
                                <h3>+</h3>
                            </div>
                        </a></li>
                        <% if (ingredients.length > 0 ) { %> 
                            <% ingredients.forEach(ingredient => { %>
                                <li><a href="#">
                                    <div class="ing__button">
                                        <h3><%= ingredient.ing_name %></h3>
                                    </div>
                                </a></li>
                            <% }) %>  
                        <% } %> 
                    </ul>
                </div>
            </div>

        </div>

    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="node_modules/jquery/dist/jquery.slim.min.js"></script>
    <script src="node_modules/popper.js/dist/umd/popper.min.js"></script>
    <script src="node_modules/bootstrap/dist/js/bootstrap.min.js"></script>
</body>
</html>